<div class="form-group" {{ conditional_display }}>
  <label class="control-label" {{ required }}>{{ form_item.localized_label }}</label>
  <input type="text" name="{% guest_field_name form_item.key %}" class="form-control" {% if prefill_from != blank %}data-copy-from="{{prefill_from}}"{% endif %} {{ required }} {{ required_if }} {% if form_item.options['readonly'] %}readonly{% endif %} value="{{ field_value }}" {{ minlength }} {{ maxlength }} {{ validations }} placeholder="{{ form_item.options.placeholder }}" />

  {{ help_block }}
</div>
