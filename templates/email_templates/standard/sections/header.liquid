{% schema %}
  {
    "name": "Header",
    "name_translations": { "fr": "Entête" },
    "settings": [
      {
        "type": "text",
        "id": "email_browser_1",
        "label": "Browser message",
        "label_translations": { "fr": "Message navigateur" },
        "default": "To see this email in the browser",
        "default_translations": { "fr": "Pour voir le message dans le navigateur" }
      },
      {
        "type": "text",
        "id": "email_browser_2",
        "label": "Browser label",
        "label_translations": { "fr": "Libellé vers navigateur" },
        "default": "Click here",
        "default_translations": { "fr": "Cliquez ici" }
      }
    ]
  }
{% endschema %}
