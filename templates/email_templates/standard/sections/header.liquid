            <table role="presentation" cellpadding="0" cellspacing="0" style="vertical-align:top;" width="100%" border="0">
              <tbody>
                <tr>
                  <td style="word-break:break-word;font-size:0px;padding:0px 25px;" align="center">
                    <div style="cursor:auto;color:{{ settings.color_body_text }};font-family:Helvetica, Arial, sans-serif;font-size:12px;line-height:16px;">
                      {{ section.settings.email_browser_1 }} <a href="{{ email_url }}" target="_blank">{{ section.settings.email_browser_2 }}</a>
