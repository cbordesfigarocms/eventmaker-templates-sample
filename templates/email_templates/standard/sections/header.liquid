<div style="margin:0 auto;max-width:600px;background:{{ settings.color_body_bg }};" data-section-id="{{ section.id }}" data-section-type="header">
  <table role="presentation" cellpadding="0" cellspacing="0" style="font-size:0px;width:100%;background:{{ settings.color_body_bg }};" align="center" border="0">
    <tbody>
      <tr>
        <td style="text-align:center;vertical-align:top;font-size:0px;padding:10px 0px 20px 0px;">
